<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/grid_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_ride_bike"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="36dp"
        android:layout_marginRight="21dp"
        android:src="@drawable/icon_check_circle_outline"
        app:layout_constraintRight_toRightOf="@+id/grid_btn"
        app:layout_constraintBottom_toBottomOf="@+id/grid_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>